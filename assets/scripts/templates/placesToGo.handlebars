{{#each places_to_gos as |places_to_go|}}
  <section data-id="{{places_to_gos.id}}">
    <h6 class="place-name-heading">Name:</h6>
    <h4>
      {{#if places_to_go.name}}
        {{places_to_go.name}}
      {{else}}
        I'm gona stay at home
      {{/if}}
    </h4>
    <button class="btn btn-danger remove-place" data-id={{id}}>Remove</button>
    <br>
    <button class="btn update-place btn-warning" data-id={{id}} data-toggle="modal" data-target="#patch-place-modal">Edit</button>
  </section>

{{/each}}
